<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CinemaMVC</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CinemaMVC.styles.css" asp-append-version="true" />
    <link href="~/css/style-fix.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true" />

    <link rel="icon" href="https://img.icons8.com/color/48/000000/movie-projector.png" type="image/png">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>

        <div class="container">
        <nav class="main-nav">
            <button class="mobile-toggle" aria-label="Toggle menu">
                <i class="fas fa-bars"></i>
            </button>

            <div class="site-logo">
                <span class="logo-text">Cinema</span>
            </div>

            <div class="search-bar">
                <i class="fas fa-search"></i>
                <input asp-action="search" asp-controller="search" type="text" placeholder="Search Movies" id="searchInput">
            </div>

            <div class="nav-menu">
                <a href="#" class="active">
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                </a>
                <a href="#">
                    <i class="fas fa-film"></i>
                    <span>Movies</span>
                </a>
                <a href="#">
                    <i class="fas fa-tv"></i>
                    <span>TV Shows</span>
                </a>
                <a href="#">
                    <i class="fas fa-star"></i>
                    <span>New & Popular</span>
                </a>
                <a href="#">
                    <i class="fas fa-list"></i>
                    <span>My List</span>
                </a>
            </div>

            <div class="user-nav">
                <img src="~/images/Crow/leonardo.jpg" alt="Profile" class="user-avatar">
                <span class="user-name">User</span>
                <i class="fas fa-chevron-down dropdown-icon"></i>
            </div>
        </nav>

            @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="site-footer">
        <div class="footer-container">
            <div class="footer-logo">
                <span class="logo-text">Cinema</span>
                <p>Your ultimate movie experience</p>
            </div>
            <div class="footer-links">
                <div class="footer-column">
                    <h4>About</h4>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Our Theaters</a></li>
                        <li><a href="#">Careers</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>Help</h4>
                    <ul>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="footer-column">
                    <h4>Follow Us</h4>
                    <div class="social-icons">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-twitter"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2023 Cinema Booking. All Rights Reserved.</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>

    <script>
        console.log("Page loaded! Checking carousel initialization");
        // Manually trigger the initialization again
        window.addEventListener('load', function () {
            console.log("Window fully loaded, initializing carousels again");
            initializeAllCarousels();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
